<thead>
<th>Id</th>
<th>Name</th>
<th>Genre</th>
<th>Price</th>
<th>Relase Date</th>
</thead>
<tbody>
    @foreach (var game in games)
    {
        <tr>
            <td>@game.Id</td>
            <td>@game.Name</td>
            <td>@game.Genre</td>
            <td>@game.Price</td>
            <td>@game.ReleaseDate</td>
        </tr>
    }
</tbody>
</table>

